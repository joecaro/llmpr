{
  "name": "llmpr",
  "version": "1.0.3",
  "description": "CLI tool for creating PR descriptions using OpenAI",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "llmpr": "dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.json",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.json --coverage",
    "prepare": "npm run build",
    "prepublishOnly": "npm test"
  },
  "keywords": [
    "pr",
    "git",
    "github",
    "openai",
    "cli"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.6.9",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
    "commander": "^12.0.0",
    "figures": "^6.1.0",
    "log-update": "^6.1.0",
    "ora": "^8.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joecaro/llmpr.git"
  },
  "bugs": {
    "url": "https://github.com/joecaro/llmpr/issues"
  },
  "homepage": "https://github.com/joecaro/llmpr#readme"
}
